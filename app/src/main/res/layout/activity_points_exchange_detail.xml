<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/member_points_bg_gradient"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical">

    <!--<include-->
        <!--layout="@layout/ui_main_title"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/member_points_detail_bg2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/back"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换记录"
                android:textSize="30sp"
                android:textColor="@color/white"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="可用积分：20"
                android:textSize="12sp"
                android:textColor="@color/white"/>

        </LinearLayout>



    </LinearLayout>



    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="3dp"-->
        <!--android:background="@drawable/divider_bcg" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="22dp"
        android:orientation="vertical"
        android:background="@drawable/back_bd5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/layout_swipe_list" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
