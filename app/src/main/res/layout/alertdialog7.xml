<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:minWidth="240dip"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f57752"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/DialogText.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                style="@style/DialogText"
                android:id="@+id/message"
                android:paddingBottom="@dimen/dp15"
                android:paddingTop="@dimen/dp15"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:text="座机："
                />

            <TextView
                style="@style/DialogText"
                android:id="@+id/tel1"
                android:paddingBottom="@dimen/dp15"
                android:paddingTop="@dimen/dp15"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:text="0519-86999222"
                android:autoLink="all"
                android:textStyle="italic"
                />

            <TextView
                style="@style/DialogText"
                android:id="@+id/message2"
                android:paddingBottom="@dimen/dp15"
                android:paddingTop="@dimen/dp15"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:text=" 手机："
                />

            <TextView
                style="@style/DialogText"
                android:id="@+id/tel2"
                android:paddingBottom="@dimen/dp15"
                android:paddingTop="@dimen/dp15"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:text="13275248446"
                android:autoLink="all"
                android:textStyle="italic"
                />

            >
        </LinearLayout>



        <TextView
            style="@style/DialogText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="工作时间：周一至周五7:00—23:00\n周六周日7:30—22:30"
            android:layout_marginBottom="@dimen/dp10"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="40dp">


        <Button
            android:id="@+id/negativeButton"
            android:layout_marginTop="0dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="40dp"
            android:textSize="@dimen/sp12"
            android:singleLine="true"
            android:gravity="center"/>
        <ImageView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/alertborder"/>
        <Button
            android:id="@+id/positiveButton"
            android:layout_width="0dip"
            android:layout_height="40dp"
            android:layout_marginTop="0dip"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:textSize="@dimen/sp12"
            android:textColor="#f57752"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>