<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:staggered="http://schemas.android.com/tools"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/ui_main_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="30dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单详情"
                android:textSize="30sp"
                android:textColor="@color/tx_black"/>
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/divider_bcg" />

        <ImageView
            android:id="@+id/my_order_detail_iv_bike"
            android:layout_width="98dp"
            android:layout_height="63dp"
            android:layout_marginTop="17dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bike_icon2" />

        <TextView
            android:id="@+id/my_order_detail_tv_car_type"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"
            android:text="单车"
            android:textColor="#3A3A3A"
            android:textSize="@dimen/sp18"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆编号："
                android:textColor="#717171"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/my_order_detail_tv_car_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="53333333"
                android:textColor="#3A3A3A"
                android:textSize="16sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="本次消费"
            android:textColor="#717171"
            android:textSize="@dimen/sp16"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#FF1700"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/my_order_detail_tv_order_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.00"
                android:textColor="#FF1700"
                android:textSize="24sp"
                />

        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#E5E5E5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="30dp"
            android:text="费用明细"
            android:textColor="#3A3A3A"
            android:textSize="@dimen/sp16"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号："
                    android:textColor="#666666"
                    android:textSize="@dimen/sp16"
                    />

                <TextView
                    android:id="@+id/my_order_detail_tv_order_sn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2019-2-20 12:00"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp16"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_order_detail_rl_payment_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式："
                    android:textColor="#666666"
                    android:textSize="@dimen/sp16"
                    />

                <TextView
                    android:id="@+id/my_order_detail_tv_payment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="套餐卡+余额"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp16"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_order_detail_rl_payment_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="支付时间："
                    android:textColor="#666666"
                    android:textSize="@dimen/sp16"
                    />

                <TextView
                    android:id="@+id/my_order_detail_tv_payment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="¥1.00/30分钟"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp16"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间："
                    android:textColor="#666666"
                    android:textSize="@dimen/sp16"
                    />

                <TextView
                    android:id="@+id/my_order_detail_tv_car_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2019-2-20 12:00"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp16"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间："
                    android:textColor="#666666"
                    android:textSize="@dimen/sp16"
                    />

                <TextView
                    android:id="@+id/my_order_detail_tv_car_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2019-2-20 12:00"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp16"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="起步价："
                    android:textColor="#666666"
                    android:textSize="@dimen/sp16"
                    />

                <TextView
                    android:id="@+id/my_order_detail_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="¥1.00/30分钟"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp16"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="续租价："
                    android:textColor="#666666"
                    android:textSize="@dimen/sp16"
                    />

                <TextView
                    android:id="@+id/my_order_detail_tv_continued_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="¥1.00/30分钟"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp16"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_order_detail_rl_each_free_time"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="免费时长："
                    android:textColor="#666666"
                    android:textSize="@dimen/sp16"
                    />

                <TextView
                    android:id="@+id/my_order_detail_tv_each_free_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="¥1.00/30分钟"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp16"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="骑行时长："
                    android:textColor="#666666"
                    android:textSize="@dimen/sp16"
                    />

                <TextView
                    android:id="@+id/my_order_detail_tv_cycling_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="30分钟"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp16"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
