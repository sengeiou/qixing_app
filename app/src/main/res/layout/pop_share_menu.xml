<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/pop_win_bg">

    <!-- 弹窗背景 -->
    <ImageView
        android:id="@+id/popupWindow_back"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFF5F7FA"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:fitsSystemWindows="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/pop_rent_bcg"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:textColor="#666666"
            android:textSize="@dimen/sp15"
            android:text="分享"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:background="@drawable/pop_rent_bcg"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/pop_menu_wechatLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@null"
                    android:src="@drawable/umeng_socialize_wechat"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:textColor="#8E8E8E"
                    android:textSize="@dimen/sp14"
                    android:text="微信"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pop_menu_wxcircleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@null"
                    android:src="@drawable/umeng_socialize_wxcircle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:textColor="#8E8E8E"
                    android:textSize="@dimen/sp14"
                    android:text="朋友圈"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pop_menu_qqLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@null"
                    android:src="@drawable/umeng_socialize_qq"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:textColor="#8E8E8E"
                    android:textSize="@dimen/sp14"
                    android:text="QQ"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pop_menu_qzoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@null"
                    android:src="@drawable/umeng_socialize_qzone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:textColor="#8E8E8E"
                    android:textSize="@dimen/sp14"
                    android:text="QQ空间"/>
            </LinearLayout>



            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal"-->
            <!--android:paddingBottom="27dp">-->
            <!--</LinearLayout>-->


        </LinearLayout>

        <TextView
            android:id="@+id/tv_share_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="12dp"
            android:paddingTop="14dp"
            android:background="@drawable/share_btn_bg"
            android:textColor="#666666"
            android:textSize="@dimen/sp13"
            android:text="取消"
            android:gravity="center_horizontal"/>

    </LinearLayout>


</RelativeLayout>
