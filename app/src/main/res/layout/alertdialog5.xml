<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:minWidth="220dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/block_dialog_bcg"
    android:orientation="vertical"
    >

    <!--android:minWidth="220dip"-->
    <!--android:background="@drawable/block_dialog_bcg"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        >

        <TextView
            android:visibility="gone"
            android:id="@+id/title"
            style="@style/DialogText.Title"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:gravity="center"
            android:textColor="#9C9C9C"
            android:text="X"
            />

        <ImageView
            android:id="@+id/scan_cancelBtn"
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp10"
            android:layout_gravity="center_vertical"
            android:src="@drawable/calendar_icon"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <ImageView
            android:id="@+id/img_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bike3"/>

        <TextView
            style="@style/DialogText"
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp15"
            android:paddingTop="@dimen/dp15"
            android:gravity="left"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:singleLine="false"
            android:textColor="#666666"
            android:textSize="@dimen/sp14"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_scan_positiveButton"
        android:layout_width="106dp"
        android:layout_height="32dp"
        android:layout_marginBottom="13dp"
        android:orientation="horizontal"
        android:background="@drawable/btn_dialog_bcg"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:visibility="gone"
            android:id="@+id/negativeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换辆车试试"
            android:textSize="@dimen/sp16"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />
        <Button
            android:visibility="gone"
            android:id="@+id/positiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换辆车试试"
            android:textSize="@dimen/sp16"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/positiveButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换辆车试试"
            android:textSize="@dimen/sp16"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />
    </LinearLayout>



</LinearLayout>