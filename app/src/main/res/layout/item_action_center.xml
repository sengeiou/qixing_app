<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <!--<View-->
        <!--android:id="@+id/item_actionCenter_line"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dp10"-->
        <!--android:background="@color/white"/>-->

    <RelativeLayout
        android:id="@+id/item_actionCenter_Layout"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@drawable/block_bcg"
        >

        <ImageView
            android:id="@+id/item_actionCenter_imageview"
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:background="@null"
            android:src="@null"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/item_actionCenter_imageview"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/item_actionCenter_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:textColor="#292929"
                android:text="骑车就用7MA出行"/>

            <TextView
                android:id="@+id/item_actionCenter_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp13"
                android:textColor="#A2A2A2"
                android:text="2019-2-20"/>

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
