<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:melove="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/personUI_mainLayout"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/ui_main_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:orientation="vertical"
            android:background="@drawable/block_bcg">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <RelativeLayout
                    android:layout_width="102dp"
                    android:layout_height="102dp">

                    <cn.qimate.bike.core.widget.MLImageView
                        android:id="@+id/personUI_bottom_header"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/me_header"
                        melove:border_color="#E1E1E1"
                        melove:border_width="1dp"
                        melove:shape_type="round"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:scaleType="centerInside"/>

                    <ImageView
                        android:id="@+id/personUI_bottom_authState"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/camera_icon"/>
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp18"
                        android:text="用户名"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/settingUI_name"
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:textSize="@dimen/sp16"
                            android:textColor="#7D7D7D"
                            android:text="骑天大圣"/>

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:src="@drawable/yjt4"
                            android:layout_marginLeft="11dp"/>
                    </LinearLayout>

                    <!--<EditText-->
                    <!--android:id="@+id/settingUI_name"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:textSize="@dimen/sp14"-->
                    <!--android:textColor="@color/tx_black"-->
                    <!--android:gravity="right|center_vertical"-->
                    <!--android:layout_marginLeft="@dimen/dp15"-->
                    <!--android:hint="请输入姓名"-->
                    <!--android:textColorHint="#999"-->
                    <!--android:background="@null"-->
                    <!--android:paddingRight="@dimen/dp15"/>-->
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="#DDDDDD"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp18"
                        android:text="手机号"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/settingUI_phoneNum"
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:textSize="@dimen/sp16"
                            android:textColor="#7D7D7D"
                            android:text="135****1123"/>

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:src="@drawable/yjt4"
                            android:layout_marginLeft="11dp"/>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="#DDDDDD"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp18"
                        android:text="实名认证"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/settingUI_realNameAuth"
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:textSize="@dimen/sp16"
                            android:textColor="#7D7D7D"
                            android:text="已认证"/>

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:src="@drawable/yjt4"
                            android:layout_marginLeft="11dp"/>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="#DDDDDD"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp18"
                        android:text="学生认证"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/settingUI_studentAuth"
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:textSize="@dimen/sp16"
                            android:textColor="#E60012"
                            android:text="未认证"/>

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:src="@drawable/yjt4"
                            android:layout_marginLeft="11dp"/>
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="@dimen/sp14"
            android:textColor="#A0A0A0"
            android:text="注册时间："/>

        <TextView
            android:id="@+id/settingUI_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="@dimen/sp14"
            android:textColor="#A0A0A0"
            android:text="2019-1-20"/>

    </LinearLayout>


    <include
        layout="@layout/ui_main_task"/>

</RelativeLayout>




