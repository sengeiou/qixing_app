                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="#E5E5E5"/>


                <RelativeLayout
                    android:id="@+id/rl_phoneNum"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp16"
                        android:text="手机号"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="22dp"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/settingUI_phoneNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp16"
                            android:textColor="#666666"
                            android:text=""/>

                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="#E5E5E5"/>

                <RelativeLayout
                    android:id="@+id/rl_sex"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp16"
                        android:text="性别"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp16"
                            android:textColor="#666666"
                            android:gravity="right"
                            android:hint="请选择性别"/>

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/yjt4"
                            android:layout_marginLeft="9dp"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="#E5E5E5"/>

                    <RelativeLayout
                        android:id="@+id/rl_school"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp16"
                            android:text="学校"
                            android:layout_centerVertical="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="22dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_school"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp16"
                                android:textColor="#666666"
                                android:text=""/>

                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="#E5E5E5"/>

                    <RelativeLayout
                        android:id="@+id/rl_college"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp16"
                            android:text="学院"
                            android:layout_centerVertical="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_college"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp16"
                                android:textColor="#666666"
                                android:gravity="right"
                                android:hint="请选择学院"/>

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="14dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/yjt4"
                                android:layout_marginLeft="9dp"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="#E5E5E5"/>

                    <RelativeLayout
                        android:id="@+id/rl_admission_time"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp16"
                            android:text="入学时间"
                            android:layout_centerVertical="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_admission_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp16"
                                android:textColor="#666666"
                                android:gravity="right"
                                android:hint="请选择入学时间"/>

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="14dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/yjt4"
                                android:layout_marginLeft="9dp"/>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>



                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_realNameAuth"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp18"
                        android:text="实名认证"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/settingUI_realNameAuth"
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:textSize="@dimen/sp16"
                            android:textColor="#7D7D7D"
                            android:text="已认证"/>

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:src="@drawable/yjt4"
                            android:layout_marginLeft="11dp"/>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="#DDDDDD"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"/>


                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_studentAuth"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp18"
                        android:text="学生认证"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/settingUI_studentAuth"
                            android:layout_width="wrap_content"
                            android:layout_height="23dp"
                            android:textSize="@dimen/sp16"
                            android:textColor="#E60012"
                            android:text="未认证"/>

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:src="@drawable/yjt4"
                            android:layout_marginLeft="11dp"/>
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="@dimen/sp14"
            android:textColor="#A0A0A0"
            android:text="注册时间："/>

        <TextView
            android:id="@+id/settingUI_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="@dimen/sp14"
            android:textColor="#A0A0A0"
            android:text="2019-1-20"/>

    </LinearLayout>


    <include
        layout="@layout/ui_main_task"/>

</cn.qimate.bike.core.widget.KeyboardLayout>




