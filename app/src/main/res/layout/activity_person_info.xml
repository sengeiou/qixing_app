                            android:layout_marginRight="5dp"
                            android:src="@drawable/yjt4"
                            android:layout_marginLeft="9dp"/>
                    </LinearLayout>

                    <!--<EditText-->
                    <!--android:id="@+id/settingUI_name"-->
