<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_main"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/ui_main_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/ui_backgroud">

        <cn.qimate.bike.core.widget.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ui_backgroud">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#f7f7f7">

                <LinearLayout
                    android:id="@+id/loginUI_headLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#f7f7f7"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:src="@drawable/login_icon" />

                    <ImageView
                        android:layout_width="71dp"
                        android:layout_height="20dp"
                        android:src="@drawable/qima_icon" />

                    <ImageView
                        android:layout_width="207dp"
                        android:layout_height="75dp"
                        android:layout_marginTop="21dp"
                        android:src="@drawable/cxxy_icon" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginTop="53dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/shape_feedback_edit1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <cn.qimate.bike.core.widget.ClearEditText
                        android:id="@+id/noteLoginUI_userName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawableRight="@drawable/delete_selector"
                        android:hint="输入手机号码"
                        android:inputType="numberDecimal"
                        android:maxLength="11"
                        android:paddingBottom="0dp"
                        android:paddingLeft="19dp"
                        android:paddingRight="0dp"
                        android:textColorHint="#7D7D7D"
                        android:textSize="@dimen/sp15"
                        android:textColor="@color/tx_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_feedback_edit1">

                    <cn.qimate.bike.core.widget.ClearEditText
                        android:id="@+id/noteLoginUI_phoneNum_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableRight="@drawable/delete_selector"
                        android:hint="输入验证码"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:paddingBottom="0dp"
                        android:paddingLeft="19dp"
                        android:paddingRight="0dp"
                        android:textColorHint="#7D7D7D"
                        android:textSize="@dimen/sp15"
                        android:textColor="@color/tx_black"/>

                    <TextView
                        android:id="@+id/noteLoginUI_noteCode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/white"
                        android:textColor="#7D7D7D"
                        android:textSize="@dimen/sp15"
                        android:text="发送验证码"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#7D7D7D"
                        android:textSize="@dimen/sp15"
                        android:text="收不到验证码？"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/noteLoginUI_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#E70412"
                        android:textSize="@dimen/sp15"
                        android:text="联系客服"
                        android:layout_alignParentRight="true"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/noteLoginUI_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_marginTop="33dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_bcg_scan_gradient"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    >
                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录"
                        android:textSize="@dimen/sp18"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#7D7D7D"
                        android:textSize="@dimen/sp15"
                        android:text="登录即代表同意"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/noteLoginUI_serviceProtocol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#E70412"
                        android:textSize="@dimen/sp15"
                        android:text="《服务协议》"
                        android:layout_alignParentRight="true"/>
                </LinearLayout>



            </LinearLayout>
        </cn.qimate.bike.core.widget.MyScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="#a3a2a2" />
    </LinearLayout>
</LinearLayout>