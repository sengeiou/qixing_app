<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mainUI_title_mainLayout"
        android:orientation="vertical">

        <cn.qimate.bike.core.widget.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <include
                    layout="@layout/ui_main_title"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="免押金认证"
                        android:textSize="30sp"
                        android:textColor="@color/tx_black"/>
                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/divider_bcg" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp30"
                    android:paddingRight="@dimen/dp30"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/ui_realNameAuth_schoolLayout"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingLeft="@dimen/dp20"
                        android:paddingRight="19dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="学校"
                            android:textColor="@color/tx_black"
                            android:textSize="@dimen/sp18" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ui_realNameAuth_schoolText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="选择学校"
                                android:textColor="@color/tx_black"
                                android:textColorHint="#A0A0A0"
                                android:textSize="@dimen/sp15" />

                            <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginLeft="@dimen/dp10"-->
                            <!--android:scaleType="centerInside"-->
                            <!--android:src="@drawable/right_arrows" />-->
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学生信息"
                            android:textSize="24sp"
                            android:textColor="@color/tx_black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <cn.qimate.bike.core.widget.ClearEditText
                            android:id="@+id/ui_deposit_free_auth_realName"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="@null"
                            android:drawableRight="@drawable/delete_selector"
                            android:gravity="center_vertical"
                            android:hint="填写真实姓名"
                            android:textColor="@color/tx_black"
                            android:textColorHint="#B2B2B2"
                            android:textSize="@dimen/sp16" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line_height"
                            android:background="#9C9C9C" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <cn.qimate.bike.core.widget.ClearEditText
                            android:id="@+id/ui_deposit_free_auth_student"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="@null"
                            android:drawableRight="@drawable/delete_selector"
                            android:gravity="center_vertical"
                            android:hint="填写学号"
                            android:textColor="@color/tx_black"
                            android:textColorHint="#B2B2B2"
                            android:textSize="@dimen/sp16" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line_height"
                            android:background="#9C9C9C" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <!--<cn.qimate.bike.core.widget.ClearEditText-->
                            <!--android:id="@+id/ui_deposit_free_auth_school"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="42dp"-->
                            <!--android:background="@null"-->
                            <!--android:drawableRight="@drawable/delete_selector"-->
                            <!--android:gravity="center_vertical"-->
                            <!--android:hint="填写学校"-->
                            <!--android:textColor="@color/tx_black"-->
                            <!--android:textColorHint="#B2B2B2"-->
                            <!--android:textSize="@dimen/sp16" />-->

                        <TextView
                            android:id="@+id/ui_deposit_free_auth_school"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:gravity="center_vertical"
                            android:hint="填写学校"
                            android:textColorHint="#B2B2B2"
                            android:textColor="@color/tx_black"
                            android:textSize="@dimen/sp16"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line_height"
                            android:background="#9C9C9C" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <!--<cn.qimate.bike.core.widget.ClearEditText-->
                            <!--android:id="@+id/ui_deposit_free_auth_time"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="42dp"-->
                            <!--android:background="@null"-->
                            <!--android:drawableRight="@drawable/delete_selector"-->
                            <!--android:gravity="center_vertical"-->
                            <!--android:hint="选择入学时间"-->
                            <!--android:textColor="@color/tx_black"-->
                            <!--android:textColorHint="#B2B2B2"-->
                            <!--android:textSize="@dimen/sp16" />-->

                        <TextView
                            android:id="@+id/ui_deposit_free_auth_time"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:gravity="center_vertical"
                            android:hint="选择入学时间"
                            android:textColorHint="#B2B2B2"
                            android:textColor="@color/tx_black"
                            android:textSize="@dimen/sp16"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line_height"
                            android:background="#9C9C9C" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_marginTop="35dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上传证件"
                            android:textSize="24sp"
                            android:textColor="@color/tx_black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:text="学生证、校园卡、录取通知均可"
                            android:textSize="12sp"
                            android:textColor="#B2B2B2"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp">

                        <ImageView
                            android:id="@+id/ui_deposit_free_auth_uploadImage"
                            android:layout_width="150dp"
                            android:layout_height="95dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/identity_card_pic1"/>

                        <ImageView
                            android:id="@+id/ui_deposit_free_auth_uploadImage2"
                            android:layout_width="150dp"
                            android:layout_height="95dp"
                            android:paddingLeft="10dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/identity_card_pic2"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/sp14"
                            android:textColor="#333333"
                            android:text="证件照片"/>

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:textSize="@dimen/sp14"
                            android:textColor="#333333"
                            android:text="手持证件照片"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="注：认证信息仅用于身份核实，我们将严格保密"
                            android:textSize="12sp"
                            android:textColor="@color/tx_black"/>
                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>

        </cn.qimate.bike.core.widget.MyScrollView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/ui_deposit_free_auth_submitBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginLeft="@dimen/dp40"
                android:layout_marginRight="@dimen/dp40"
                android:background="@drawable/btn_bcg"
                android:gravity="center"
                android:maxHeight="0dp"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="27dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/sp10"
                android:text="点击提交即表示同意"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/ui_realNameAuth_serviceProtocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="@dimen/sp10"
                android:text="《服务协议》"
                android:layout_alignParentRight="true"/>


        </LinearLayout>

    </LinearLayout>


    <include
        layout="@layout/ui_main_task"/>
</RelativeLayout>
