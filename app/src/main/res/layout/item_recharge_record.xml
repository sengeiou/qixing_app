<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item01_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp5"
        android:background="@color/ui_backgroud"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item01_bg"
        android:orientation="horizontal"
        android:padding="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00c9fa"
            android:textSize="@dimen/sp14"
            android:text="充值记录"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/item_rechargeRecord_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="3dp"
            android:textColor="#666666"
            android:textSize="@dimen/sp14"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/dp10"
        android:background="@color/ui_backgroud"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item01_bg"
        android:padding="@dimen/dp10"
        android:layout_marginTop="1dp">
        <TextView
            android:id="@+id/item_rechargeRecord_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="0dp"
            android:textColor="@color/tx_gray"
            android:textSize="@dimen/sp14"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/item_rechargeRecord_payBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp20"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="立即支付"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:layout_alignParentRight="true"
            android:textColor="#f57752"
            android:textSize="@dimen/sp12"
            android:background="@drawable/shape_feedback_selectd"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
