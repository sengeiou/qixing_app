<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/ui_main_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="18dp"
            android:paddingLeft="30dp"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结算台"
                android:textSize="30sp"
                android:textColor="@color/tx_black"/>
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/divider_bcg" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="#F1F1F1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:text="支付金额"
                android:textColor="#333333"
                android:textSize="@dimen/sp20"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="充值"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp18"
                    />

                <TextView
                    android:id="@+id/tv_unpay_route_car_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:text="￥200.00"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="优惠券"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp18"
                    />

                <TextView
                    android:id="@+id/tv_unpay_route_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:text="￥200.00"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="13dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="总计"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp18"
                    />

                <TextView
                    android:id="@+id/tv_unpay_route_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:text="￥200.00"
                    android:textColor="#FF0000"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="16dp"

            android:background="#F1F1F1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"
                android:text="支付方式"
                android:textColor="#333333"
                android:textSize="@dimen/sp20"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="30dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:src="@drawable/balance_logo"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="38dp"
                    android:text="余额支付"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp16"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="110dp"
                    android:text="当前余额￥1.00"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp10"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="187dp"
                    android:text="立即充值"
                    android:textColor="#FF0000"
                    android:textSize="@dimen/sp14"
                    />

                <ImageView
                    android:id="@+id/ui_1"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/pay_type_selected"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="60dp"
                android:background="#E5E5E5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:src="@drawable/alipay_logo"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="38dp"
                    android:text="支付宝支付"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp16"
                    />

                <ImageView
                    android:id="@+id/ui_2"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/pay_type_normal"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="60dp"
                android:background="#E5E5E5"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="11dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:src="@drawable/wechat_logo"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="38dp"
                    android:text="微信支付"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp16"
                    />

                <ImageView
                    android:id="@+id/ui_curRoadBiked_alipayTypeImage"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/pay_type_normal"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/unpay_route_submitBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/btn_bcg"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:textColor="@color/white"
                android:text="支付"
                />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
