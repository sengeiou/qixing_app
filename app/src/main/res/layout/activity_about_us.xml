<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:melove="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#F5F5F5"
    >

    <include
        layout="@layout/ui_main_title"/>

    <LinearLayout
        android:id="@+id/loginUI_headLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:background="#f7f7f7"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/login_icon" />

        <ImageView
            android:layout_width="71dp"
            android:layout_height="20dp"
            android:src="@drawable/qima_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp"
            android:text="V 2.0.0"
            android:textColor="#333333"
            android:textSize="@dimen/sp15"
            />

        <ImageView
            android:layout_width="207dp"
            android:layout_height="75dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/cxxy_icon" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/block_bcg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/personUI_bottom_cleanLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="联系电话"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp15"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="22dp"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0519—86999222"
                    android:textColor="#E60012"
                    android:textSize="@dimen/sp15"
                    android:gravity="center|right"
                    />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/personUI_bottom_checkLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="QQ服务群"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="22dp"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="625708336"
                    android:textColor="#E60012"
                    android:textSize="@dimen/sp15"
                    android:gravity="center|right"
                    />
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/personUI_bottom_aboutUsLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="微信公众号"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="22dp"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="7MA出行"
                    android:textColor="#E60012"
                    android:textSize="@dimen/sp15"
                    android:gravity="center|right"
                    />
            </LinearLayout>
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/personUI_bottom_questionLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="新浪微博"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@7MA出行"
                    android:textColor="#E60012"
                    android:textSize="@dimen/sp15"
                    android:gravity="center|right"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personUI_bottom_emailLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="电子邮箱"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1019873057@qq.com"
                    android:textColor="#E60012"
                    android:textSize="@dimen/sp15"
                    android:gravity="center|right"
                    />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personUI_bottom_webLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="官方网站"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="www.7mate.cn"
                    android:textColor="#E60012"
                    android:textSize="@dimen/sp15"
                    android:gravity="center|right"
                    />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>



</LinearLayout>


