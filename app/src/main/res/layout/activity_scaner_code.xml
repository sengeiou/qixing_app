<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/capture_containter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#88000000"
                android:fitsSystemWindows="true"
                >


    <SurfaceView
        android:id="@+id/capture_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"/>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_alignParentTop="true"
        android:background="@drawable/scan_mask">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:alpha="0.5"
            android:onClick="btn"
            android:src="@drawable/s_light"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/top_openpicture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:alpha="0.5"
            android:onClick="btn"
            android:src="@drawable/s_img"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/top_back"
            android:layout_width="23dp"
            android:layout_height="17dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp30"
            android:onClick="btn"
            android:src="@drawable/s_left"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:textSize="@dimen/sp14"
            android:textColor="@color/white"
            android:text="输入编号开锁"
            android:gravity="center_vertical"
            android:onClick="btn"
            android:visibility="gone"/>
    </RelativeLayout>

    <!--android:layout_centerInParent="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_above="@+id/tv_tip"-->



    <ImageView

        android:id="@+id/top_mask_bcg"
        android:layout_width="206dp"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title"
        android:layout_above="@id/capture_crop_layout"
        android:src="@null"
        android:background="@drawable/scan_mask"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_help"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title"
        android:layout_above="@id/capture_crop_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_help"
            android:layout_width="149dp"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:src="@drawable/help"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="按下左侧按钮，加快开锁速度 "
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/bottom_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/capture_crop_layout"
        android:background="@drawable/scan_mask"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_mask"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/rl_title"
        android:layout_toLeftOf="@id/capture_crop_layout"
        android:background="@drawable/scan_mask"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_mask"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_title"
        android:layout_toRightOf="@id/capture_crop_layout"
        android:background="@drawable/scan_mask"
        android:contentDescription="@string/app_name"/>

    <!--android:layout_below="@+id/capture_crop_layout"-->

    <RelativeLayout
        android:id="@+id/capture_crop_layout"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/scan_mask"
        >

        <RelativeLayout
            android:id="@+id/capture_crop_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/rl_crop"
                android:layout_width="206dp"
                android:layout_height="206dp"
                android:background="@drawable/capture"
                android:contentDescription="@string/app_name">

                <ImageView
                    android:id="@+id/capture_scan_line"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/kakalib_scan_ray"
                    android:contentDescription="@string/app_name"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="53dp"
                android:layout_below="@+id/rl_crop"
                android:contentDescription="@string/app_name">

                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_marginBottom="0dp"
                    android:layout_width="200dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/block_scan_bcg"
                    android:text="对准车上的二维码"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp14"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>





    <!--<ImageView-->
        <!--android:layout_width="220dp"-->
        <!--android:layout_height="53dp"-->
        <!--android:layout_below="@id/rl_crop"-->
        <!--android:src="@null"-->
        <!--android:background="@drawable/scan_mask"-->
        <!--android:layout_centerHorizontal="true"/>-->

    <!--android:layout_below="@id/capture_crop_layout"-->



    <LinearLayout
        android:id="@+id/ll_input2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginBottom="83dp"
            android:layout_above="@+id/ll_input"
            android:onClick="btn"
            android:weightSum="2">
            <TextView
                android:id="@+id/loca_show_btnBikeNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/top_hand"
                android:gravity="center"
                android:src="@drawable/code_icon"
                android:text="手动输车号"
                android:textColor="#DBD5D5"
                android:onClick="btn"
                />

            <TextView
                android:id="@+id/top_mask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/top_light"
                android:gravity="center"
                android:src="@drawable/linecode_icon"
                android:text="手电筒"
                android:textColor="#DBD5D5"
                android:onClick="btn"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_input"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/block_bcg"
            android:visibility="gone"
            >

            <cn.qimate.bike.core.widget.ClearEditText
                android:id="@+id/loginUI_userName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableRight="@drawable/delete_selector"
                android:hint="请输入您的手机号码"
                android:inputType="numberDecimal"
                android:maxLength="11"
                android:paddingBottom="0dp"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="0dp"
                android:textColorHint="#ceced4"
                android:textSize="@dimen/sp12" />

        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="@dimen/dp5"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/loginUI_noteLogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp25"
            android:paddingRight="@dimen/dp20"
            android:text="短信验证码登录"
            android:textColor="@color/tx_black_light"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/loginUI_findPsd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp25"
            android:text="忘记密码?"
            android:textColor="@color/tx_black_light"
            android:textSize="@dimen/sp14" />
    </RelativeLayout>

</RelativeLayout>